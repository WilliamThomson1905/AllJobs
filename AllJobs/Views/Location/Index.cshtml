@model IEnumerable<AllJobs.Models.LocationCategory>

@{
    ViewBag.Title = "Index";
}

<section style="background: #fafafa;">
    <div class="container">
        <div class="row">
            <div class="col-lg-10">
                <h4>Manage Locations</h4>

                <p>
                    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-default" })
                </p>
                <br/>
                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.LocationName)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.LocationName)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.LocationCategoryId }) 
                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>                
</section>