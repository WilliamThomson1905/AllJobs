@model AllJobs.Models.AdvertisementViewModel


@{
    ViewBag.Title = "Advertisement";
}


<div class="item-list job-item">

     <div class="col-sm-10  col-xs-10  add-desc-box">
        <div class="add-details jobs-item">    
            <h5 class="company-title ">@Html.ActionLink(Model.CompanyName, "JobDetails", "Advertisements", new { Id = Model.AdvertisementId }, new { @class = "company-title" })</h5>
            <h4 class="job-title"> @Html.ActionLink(Model.JobTitle, "JobDetails", "Advertisements", new { Id = Model.AdvertisementId }, new { @class = "company-title" }) 
            

                <!--Request.IsAuthenticated && !User.IsInRole("Applicant") && -->
            @if (Model.Employer.Email.Equals(User.Identity.Name)) 
            { <span>-</span> @Model.Applicants.Count() <span>Applicants</span> } </h4>


            <span class="info-row">
                <span class="item-location">
                    <i class="fa fa-map-marker"></i> @Model.Location.LocationName /
                </span> 
                <span class="date">
                    <i class="icon-clock"></i> @Model.JobType.JobTypeName / 
                </span><span class="salary">
                    <i class= "icon-money"></i> @Model.MaxSalary per Annum
                </span>
            </span>

            <div class="jobs-desc">
                @Model.ShortDescription
            </div>

            



        </div>
    </div>
</div>
<!--/.job-item-->




