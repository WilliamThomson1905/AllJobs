<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">

        <!-- If I haven't set the ViewBag.Title value then default to AllJobs -->
        @if (ViewBag.Title != null) { <title>@ViewBag.Title</title>}
        else {<title>All Jobs</title>}
       
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="robots" content="all,follow">

        <!-- Bootstrap CSS-->
        <link rel="stylesheet" href="~/Content/bootstrap.min.css">
        <!-- Font Awesome CSS-->
        <link rel="stylesheet" href="~/Content/font-awesome.min.css">
        <!-- Google fonts - Roboto for copy, Montserrat for headings-->
        <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Roboto:300,400,700">
        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Montserrat:400,700">
        <!-- owl carousel-->
        <link rel="stylesheet" href="~/Content/owl.carousel.css">
        <link rel="stylesheet" href="~/Content/owl.theme.css">
        <!-- theme stylesheet-->
        <link rel="stylesheet" href="~/Content/style.default.css" id="theme-stylesheet">
        
        
        <!-- Favicon-->
        <link rel="shortcut icon" href="favicon.png">

        <!-- Tweaks for older IEs-->
        <!--[if lt IE 9
        <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script><![endif]-->
    </head>
    <body>
        <!-- navbar -->
        <header class="header">
            <div role="navigation" class="navbar navbar-default">
                <div class="container">
                    <div class="navbar-header">
                        @*<a href="~/Home/Index" class="navbar-brand"><img src="~/img/logo-small.png" alt="logo" class="hidden-xs hidden-sm"><img src="~/img/logo-small.png" alt="logo" class="visible-xs visible-sm"><span class="sr-only">Go to homepage</span></a>*@
                        <a href="~/Home/Index" class="navbar-brand"><img src="~/img/logo-small.png" alt="logo"></a>
                        
                        <div class="navbar-buttons">
                            <button type="button" data-toggle="collapse" data-target=".navbar-collapse" class="navbar-toggle navbar-btn">Menu<i class="fa fa-align-justify"></i></button>
                        </div>
                    </div>
                    <div id="navigation" class="collapse navbar-collapse navbar-right">
                        <ul class="nav navbar-nav">


                            @if (User.IsInRole("Administrator") || User.IsInRole("Manager"))
                            {

                                <li class="dropdown">
                                    <a href="#" data-toggle="dropdown" class="dropdown-toggle">Admin<b class="caret"></b></a>
                                    <ul class="dropdown-menu">
                                        <li>@Html.ActionLink("Users", "Index", "Admin")</li>
                                        <li>@Html.ActionLink("Manage Jobs", "AllJobs", "Advertisements")</li>
                                        <li>@Html.ActionLink("Locations", "Index", "Location")</li>
                                        <li>@Html.ActionLink("Job Sector", "Index", "JobSector")</li>
                                    </ul>
                                </li>
                                @*<li>@Html.ActionLink("Admin", "Index", "Admin")</li>*@
                            }


                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.RouteLink("Browse Jobs", "BrowseJobs", new { SearchFilter = "Search by Profession", DatePosted = 0, JobTypeName = "All", pay = 0, LocationName = "All Locations" })</li>
                            <li>@Html.ActionLink("About", "About", "Home")</li>
                            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>


                            @if (Request.IsAuthenticated)
                            {
                                if (User.IsInRole("Administrator") || User.IsInRole("Recruiter") || User.IsInRole("Manager") || User.IsInRole("HR") || User.IsInRole("IT") || User.IsInRole("Recruitment Consultant"))
                                {
                                    <li class="dropdown">
                                        <a href="#" data-toggle="dropdown" class="dropdown-toggle">Client zone <b class="caret"></b></a>
                                        <ul class="dropdown-menu">
                                            <li>@Html.ActionLink("Dashboard", "MyDashboard", "Advertisements")</li>
                                            <li>@Html.ActionLink("Post a new job", "PostNewJob", "Advertisements")</li>
                                        </ul>
                                    </li>
                                }
                            }
                            
                        </ul>
                        @Html.Partial("_LoginPartial")
                    
                    </div>
                </div>
            </div>
        </header>
        

        @RenderBody()


        <footer class="footer">
            <div class="footer__block">
                <div class="container">
                    
                    <div class="row">
                        <div class="col-md-4 col-md-6">
                            <h4>About All Jobs</h4>
                            <p>
                                As the world's #1 job site, with over 200 million unique visitors every month from over 60 different countries,
                                AllJobs has become the catalyst for putting the world to work. AllJobs is intensely passionate about delivering the right fit for every hire.
                            </p>



                        </div>

                        <div class="col-md-4 col-md-6">
                            <h4>Our offices</h4>

                            <div class="col-md-6">

                                <h5>London</h5>
                                <p> 34 Park Lane, UK<br />tele: + 44 2556 789 8799</p>
                            </div>
                            <div class="col-md-6">

                                <h5>Paris</h5>
                                <p> 21 Frog tower, France<br />mob: + 41 2556 789 8799</p>
                            </div>
                        </div>


                    </div>
                    
                </div>
            </div>
            <div class="footer__copyright">
                <div class="container">
                    <div class="row">
                        <div class="col-md-6">
                            <p>&copy;2019 AllJobs ~ Awesome</p>
                        </div>
                      
                    </div>
                </div>
            </div>
        </footer>
        
        
        <!-- Javascript files-->
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
        <script>window.jQuery || document.write('<script src="js/jquery-1.11.0.min.js"><\/script>')</script>
        <script src="~/scripts/bootstrap.min.js"></script>
        <script src="~/scripts/jquery.cookie.js"> </script>
        <script src="~/scripts/owl.carousel.min.js"></script>
        <script src="~/scripts/front.js"></script>
