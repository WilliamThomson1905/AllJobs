@model IEnumerable<AllJobs.Models.RoleDTO>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<!-- William Thomson -->
<!-- 28/07/2017 -->
<!-- Displays all the roles in the system - and edit/delete options -->




<section style="background: #fafafa;">
    <div class="container">
        <div class="row">


            <br />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <p>
                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default" })
                @Html.ActionLink("Add Role", "AddRole", null, new { @class = "btn btn-default" })
            </p>
            <table class="table">
                <tr>
                    <th>
                        Role
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.RoleName)
                        </td>
                        <td>
                            @if (item.RoleName.ToLower() != "administrator")
                {
                                @Html.ActionLink("Delete", "DeleteUserRole",
                   new { RoleName = item.RoleName },
                   new
                   {
                       onclick =
                   "return confirm('Are you sure you wish to delete this role?');"
                   })
                            }
                        </td>

                    </tr>
                }
            </table>

        </div>
    </div>
</section>