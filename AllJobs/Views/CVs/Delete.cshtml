@using AllJobs.Models;
@model AllJobs.Models.CV

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section style="background: #fafafa;">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div>
                    <h4>Are you sure you want to delete this CV?</h4>
                    <hr />
                    <dl class="dl-horizontal">

                        <dt>
                            @Html.DisplayNameFor(model => model.Title)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Title)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Profile)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Profile)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Skills_Interests)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Skills_Interests)
                        </dd>

                    </dl>

                    <br /> <br />

                    @if (ViewBag.QualificationOptions != null)
                    {
                        <br />
                        <h6>Qualifications</h6>

                            <div>



                                <div class="table-responsive">

                                    <table class="table">
                                        <tr>
                                            <th> Qualification </th>
                                            <th> Level </th>
                                            <th> Start Date </th>
                                            <th> End Date </th>
                                            <th> Grade </th>
                                            <th> Institution Name </th>

                                        </tr>

                                        @foreach (Qualification qualification in Model.Qualifications)
                                        {
                                            <tr>

                                                <td>
                                                    @qualification.QualificationName
                                                </td>
                                                <td>
                                                    @qualification.Level
                                                </td>

                                                <td>
                                                    @qualification.StartDate
                                                </td>
                                                <td>
                                                    @qualification.EndDate
                                                </td>
                                                <td>
                                                    @qualification.Grade
                                                </td>
                                                <td>
                                                    @qualification.InstitutionName
                                                </td>

                                            </tr>
                                        }

                                    </table>

                                </div>
                            </div>

                    }

                    <br />

                    @if (ViewBag.JobHistoryOptions != null)
                    {
                        <br />
                        <h6>Job History</h6>

                        <div>



                            <div class="table-responsive">

                                <table class="table">
                                    <tr>


                                        <th>
                                            JobTitle
                                        </th>
                                        <th>
                                            CompanyName
                                        </th>
                                        <th>
                                            Description
                                        </th>
                                        <th>
                                            StartDate
                                        </th>
                                        <th>
                                            EndDate
                                        </th>
                                    </tr>

                                    @foreach (JobHistory jobHistory in Model.PreviousJobs)
                                    {
                                        <tr>


                                            <td>
                                                @Html.DisplayFor(modelItem => jobHistory.JobTitle)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => jobHistory.CompanyName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => jobHistory.Description)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => jobHistory.StartDate)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => jobHistory.EndDate)
                                            </td>

                                        </tr>
                                    }

                                </table>
                            </div>
                        </div>

                    }




                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <br />
                        <div class="form-actions no-color">
                            <input type="submit" value="Delete" class="btn btn-default" 
                                   onclick = "return confirm('Are you sure you wish to Remove this CV from your Account? It will cannot be undone. ');" />
                            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default" })
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>