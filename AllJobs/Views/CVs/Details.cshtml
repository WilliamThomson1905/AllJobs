@using AllJobs.Models
@using Microsoft.AspNet.Identity;
@model AllJobs.Models.CV

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<section style="background: #fafafa;">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2">
  

                
                @if (User.Identity.GetUserId().Equals(Model.Id))
                {
                    <h1 class="heading">@Html.DisplayFor(model => model.Title)</h1>
                    <p class="lead text-center">@Model.Description</p>
                }
                else
                {
                    <h1 class="heading">@ViewBag.CurrentUser.Forename @ViewBag.CurrentUser.Surname </h1>


                    @*<h6>@Html.DisplayNameFor(model => model.Profile)</h6>*@
                    <p class="lead text-center">@Html.DisplayFor(model => model.Profile)</p>



                }


            </div>
        </div>
    </div>
</section>

<section>
    <div class="container">
        <div class="row">


          
            <div class="col-lg-12">
                @*<div class="table-responsive">*@

                <div class="panel-body">
                    <div class="col-lg-9">
                        @if (User.Identity.GetUserId().Equals(Model.Id))
                        {
                            <br />
                            <h6>@Html.DisplayNameFor(model => model.Profile)</h6>
                            <p>@Html.DisplayFor(model => model.Profile)</p>

                        }


                        <br />
                        <h6>@Html.DisplayNameFor(model => model.Skills_Interests)</h6>
                        <p>@Html.DisplayFor(model => model.Skills_Interests)</p>

                    </div>
                </div>

                <br /> <br />

                @if (Model.Qualifications.Any())
                {
                    <br/>
                    <h6>My Qualifications</h6>

                    <div>
         


                        <div class="table-responsive">

                            <table class="table">
                                <tr>
                                    <th> Qualification </th>
                                    <th> Level </th>
                                    <th> Start Date </th>
                                    <th> End Date </th>
                                    <th> Grade </th>
                                    <th> Institution Name </th>
                                    <th></th>
                                </tr>

                                @foreach (Qualification qualification in Model.Qualifications)
                                {
                                    <tr>

                                        <td>
                                            @qualification.QualificationName
                                        </td>
                                        <td>
                                            @qualification.Level
                                        </td>

                                        <td>
                                            @qualification.StartDate
                                        </td>
                                        <td>
                                            @qualification.EndDate
                                        </td>
                                        <td>
                                            @qualification.Grade
                                        </td>
                                        <td>
                                            @qualification.InstitutionName
                                        </td>
                           
                                    </tr>
                                }

                            </table>

                        </div>
                    </div>

                }

                <br />
                @if (Model.PreviousJobs.Any())
                {

                    <br />
                    <h6>My Job History</h6>

                    <div>



                        <div class="table-responsive">

                            <table class="table">
                                <tr>
                                    <th> Job </th>
                                    <th> Company Name </th>
                                    <th> Start Date </th>
                                    <th> End Date </th>
                                    <th> Description </th>
                                    <th></th>
                                </tr>

                                @foreach (JobHistory previousJobs in Model.PreviousJobs)
                                {
                                    <tr>

                                        <td>
                                            @previousJobs.JobTitle
                                        </td>
                                        <td>
                                            @previousJobs.CompanyName
                                        </td>

                                        <td>
                                            @previousJobs.StartDate
                                        </td>
                                        <td>
                                            @previousJobs.EndDate
                                        </td>
                                        <td>
                                            @previousJobs.Description
                                        </td>
                                

                                    </tr>
                                }

                            </table>

                        </div>
                    </div>

                }

                @if (User.Identity.GetUserId().Equals(Model.Id))
                {
                    <p>
                        @Html.ActionLink("Edit", "Edit", new { id = Model.CV_Id }, new { @class = "btn btn-default" })
                        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default" })
                    </p>

                }


            </div>
        </div>
    </div>
</section>










