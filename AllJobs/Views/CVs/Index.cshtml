@*@using AllJobs.Models;*@
@model IEnumerable<AllJobs.Models.CV>

@{
    ViewBag.Title = "My CVs";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.Any())
{ 
<section style="background: #fafafa;">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">

                <h4>My CVs</h4>

                <div class="table-responsive">


                    <table class="table text-center">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Title)
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Title)
                                </td>

                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.CV_Id }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.CV_Id }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.CV_Id })
                                </td>
                            </tr>
                        }

                    </table>
                    
                </div>

                <br />
                <p>
                    @Html.ActionLink("Create a CV", "Create", null, new { @class = "btn btn-default" })
                </p>


            </div>
            
        </div>
    </div>
</section>

}
else
{
    <section style="background: #fafafa;">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">

                    <h4>You haven't created any CVs at the moment.</h4>


                    <div class="text-center">
                        <br /><br /><br /><br />
                        You can create as many CVs as you'd like, Free of Charge. <br />
                        <br /><br /><br />
                    </div>

                    <br />
                    
                    <div class="text-center">
                        <p>
                            @Html.ActionLink("Create a CV", "Create", null, new { @class = "btn btn-primary" })
                        </p>
                    </div>

                </div>

            </div>
        </div>
    </section>

}